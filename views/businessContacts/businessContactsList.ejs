<% include ../partials/header.ejs %>
<div class="container">
    <h1 class="display-1"><%= title %></h1>
    <div class="row">
        <div class="col-md-11">
            <br>
            <table class="table table-bordered table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Phone Number</th>
                    <th class="text-center col-4">E-Mail</th>
                    <th class="text-center col-2" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let i = 0; i < businessContactsList.length; i++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= businessContactsList[i].name %></td>
                        <td class="text-center col-2"><%= businessContactsList[i].pNumber %></td>
                        <td class="text-center col-4"><%= businessContactsList[i].email %></td>
                        <td class="text-center col-1">
                            <a href="/businessContacts/edit/<%= businessContactsList[i]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/businessContacts/delete/<%= businessContactsList[i]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </div>

<% include ../partials/footer.ejs %>
<% include ../partials/scripts.ejs %>